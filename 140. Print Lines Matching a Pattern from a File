
#include <stdio.h>
#include <string.h>

int main() {
    FILE *f = fopen("text.txt", "r");

    char line[200], pat[50];
    printf("Enter pattern: ");
    scanf("%s", pat);

    while(fgets(line, sizeof(line), f))
        if(strstr(line, pat))
            printf("%s", line);

    fclose(f);
    return 0;
}
