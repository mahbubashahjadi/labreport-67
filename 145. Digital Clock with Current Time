#include <stdio.h>
#include <time.h>
#include <unistd.h>

int main() {
    while(1) {
        time_t t;
        time(&t);

        struct tm *ti = localtime(&t);

        printf("\r%02d:%02d:%02d",
               ti->tm_hour, ti->tm_min, ti->tm_sec);

        fflush(stdout);
        sleep(1);
    }
    return 0;
}
