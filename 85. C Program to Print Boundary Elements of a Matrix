
#include <stdio.h>

int main(){
    int a[10][10], r,c,i,j;

    printf("Enter rows & columns: ");
    scanf("%d %d",&r,&c);

    printf("Enter matrix:\n");
    for(i=0;i<r;i++)
        for(j=0;j<c;j++)
            scanf("%d",&a[i][j]);

    printf("\nBoundary elements:\n");
    for(i=0;i<r;i++){
        for(j=0;j<c;j++){
            if(i==0 || j==0 || i==r-1 || j==c-1)
                printf("%d ",a[i][j]);
            else
                printf("  ");
        }
        printf("\n");
    }
}
