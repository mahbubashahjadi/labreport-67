
#include <stdio.h>

int main() {
    int n;
    printf("Enter size: ");
    scanf("%d", &n);

    int arr[n];
    for(int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    int *p = arr;

    for(int i = 0; i < n-1; i++)
        for(int j = i+1; j < n; j++)
            if(*(p+i) > *(p+j)) {
                int temp = *(p+i);
                *(p+i) = *(p+j);
                *(p+j) = temp;
            }

    printf("Sorted: ");
    for(int i = 0; i < n; i++)
        printf("%d ", arr[i]);

    return 0;
}
