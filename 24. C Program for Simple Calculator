
(Uses switch-case)

#include <stdio.h>

int main() {
    char op;
    float a, b;

    scanf("%f %f %c", &a, &b, &op);

    switch(op) {
        case '+': printf("Result = %.2f", a + b); break;
        case '-': printf("Result = %.2f", a - b); break;
        case '*': printf("Result = %.2f", a * b); break;
        case '/': printf("Result = %.2f", a / b); break;
        default: printf("Invalid Operator");
    }
    return 0;
}
