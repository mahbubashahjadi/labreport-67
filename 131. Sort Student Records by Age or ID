
#include <stdio.h>

struct Student {
    int id;
    int age;
};

int main() {
    int n;
    printf("Enter number of students: ");
    scanf("%d", &n);

    struct Student s[n], temp;

    for(int i = 0; i < n; i++) {
        printf("ID & Age: ");
        scanf("%d %d", &s[i].id, &s[i].age);
    }

    for(int i = 0; i < n - 1; i++)
        for(int j = i + 1; j < n; j++)
            if(s[i].age > s[j].age) {
                temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }

    printf("\nSorted by Age:\n");
    for(int i = 0; i < n; i++)
        printf("ID: %d Age: %d\n", s[i].id, s[i].age);

    return 0;
}
