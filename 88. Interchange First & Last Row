
#include <stdio.h>

int main(){
    int a[10][10], r,c,i,j,temp;

    printf("Enter rows & columns: ");
    scanf("%d %d",&r,&c);

    printf("Enter matrix:\n");
    for(i=0;i<r;i++)
        for(j=0;j<c;j++)
            scanf("%d",&a[i][j]);

    // swap first and last row
    for(j=0;j<c;j++){
        temp = a[0][j];
        a[0][j] = a[r-1][j];
        a[r-1][j] = temp;
    }

    printf("\nMatrix after row swap:\n");
    for(i=0;i<r;i++){
        for(j=0;j<c;j++)
            printf("%d ",a[i][j]);
        printf("\n");
    }
}
