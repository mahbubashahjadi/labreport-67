#include <stdio.h>

struct Complex {
    float real, imag;
};

int main() {
    struct Complex a, b, sum;

    scanf("%f %f", &a.real, &a.imag);
    scanf("%f %f", &b.real, &b.imag);

    sum.real = a.real + b.real;
    sum.imag = a.imag + b.imag;

    printf("Sum = %.1f + %.1fi", sum.real, sum.imag);
    return 0;
}
