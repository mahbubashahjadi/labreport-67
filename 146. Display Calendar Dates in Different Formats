
#include <stdio.h>
#include <time.h>

int main() {
    time_t t;
    time(&t);

    struct tm *dt = localtime(&t);

    printf("DD/MM/YYYY : %02d/%02d/%04d\n",
            dt->tm_mday, dt->tm_mon + 1, dt->tm_year + 1900);

    printf("MM-DD-YYYY : %02d-%02d-%04d\n",
            dt->tm_mon + 1, dt->tm_mday, dt->tm_year + 1900);

    printf("YYYY.MM.DD : %04d.%02d.%02d\n",
            dt->tm_year + 1900, dt->tm_mon + 1, dt->tm_mday);

    printf("Full Format: %s", asctime(dt));

    return 0;
}
