#include <stdio.h>
#include <math.h>

int isPrime(int n) {
    if(n <= 1) return 0;
    if(n <= 3) return 1;
    if(n % 2 == 0) return 0;
    for(int i = 3; i <= sqrt(n); i += 2)
        if(n % i == 0) return 0;
    return 1;
}

int main() {
    int n;
    scanf("%d", &n);
    int found = 0;
    for(int i = 2; i <= n/2; i++) {
        if(isPrime(i) && isPrime(n - i)) {
            printf("%d = %d + %d\n", n, i, n - i);
            found = 1;
            break; // remove break to print all pairs
        }
    }
    if(!found) printf("Not expressible as sum of two primes\n");
    return 0;
}
