#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n); // n = number of rows for half (center row width = 2*n-1)

    // Upper half (including center)
    for(int i = 1; i <= n; i++) {
        for(int s = 1; s <= n - i; s++) printf(" ");
        for(int j = 1; j <= 2*i - 1; j++) {
            if(j == 1 || j == 2*i - 1) printf("*");
            else printf(" ");
        }
        printf("\n");
    }

    // Lower half
    for(int i = n - 1; i >= 1; i--) {
        for(int s = 1; s <= n - i; s++) printf(" ");
        for(int j = 1; j <= 2*i - 1; j++) {
            if(j == 1 || j == 2*i - 1) printf("*");
            else printf(" ");
        }
        printf("\n");
    }

    return 0;
}
