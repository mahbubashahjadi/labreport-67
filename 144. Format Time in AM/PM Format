
#include <stdio.h>
#include <time.h>

int main() {
    time_t t;
    time(&t);

    struct tm *ti = localtime(&t);

    int hour = ti->tm_hour;
    char *ampm = (hour >= 12) ? "PM" : "AM";

    if(hour == 0) hour = 12;
    else if(hour > 12) hour -= 12;

    printf("Time: %02d:%02d:%02d %s\n",
           hour, ti->tm_min, ti->tm_sec, ampm);

    return 0;
}
