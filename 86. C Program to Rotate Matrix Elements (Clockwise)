#include <stdio.h>

int main(){
    int n, i, j;
    int a[20][20], b[20][20];

    printf("Enter size of square matrix: ");
    scanf("%d",&n);

    printf("Enter matrix:\n");
    for(i=0;i<n;i++)
        for(j=0;j<n;j++)
            scanf("%d",&a[i][j]);

    // 90-degree rotation
    for(i=0;i<n;i++)
        for(j=0;j<n;j++)
            b[j][n-1-i] = a[i][j];

    printf("\nRotated Matrix:\n");
    for(i=0;i<n;i++){
        for(j=0;j<n;j++)
            printf("%d ",b[i][j]);
        printf("\n");
    }
}







